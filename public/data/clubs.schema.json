{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "school", "city", "province", "coordinates"],
    "properties": {
      "name": { "type": "string", "minLength": 1, "description": "社团名称（不可修改）" },
      "school": { "type": "string", "minLength": 1, "description": "所属学校（不可修改）" },
      "city": { "type": "string", "minLength": 1 },
      "province": { "type": "string", "minLength": 1 },
      "coordinates": {
        "type": "array",
        "items": [
          { "type": "number", "minimum": -180, "maximum": 180, "description": "经度" },
          { "type": "number", "minimum": -90, "maximum": 90, "description": "纬度" }
        ],
        "minItems": 2,
        "maxItems": 2,
        "description": "坐标 [longitude, latitude]"
      },
      "index": {
        "type": "integer",
        "minimum": 0,
        "description": "排序索引（仅数据库内部使用，不出现在JSON中）"
      },
      "logo": { 
        "type": "string",
        "description": "Logo图片文件名，例如: club-logo.png",
        "pattern": "^[a-zA-Z0-9_-]+\\.(png|jpg|jpeg|gif|svg)$"
      },
      "shortDescription": { "type": "string" },
      "description": { "type": "string" },
      "externalLinks": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type", "url"],
          "properties": {
            "type": { "type": "string" },
            "url": { "type": "string", "format": "uri" }
          }
        },
        "default": []
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "default": []
      }
    },
    "additionalProperties": true
  }
}
